{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "taskName": "Test Open File",
      "type": "shell",
      "command": "${workspaceRoot}/node_modules/.bin/jest",
      "args": [
        "${file}",
        "--coverage"
      ],
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "cover",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "lint",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}